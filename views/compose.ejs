<%- include("partials/header") -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="blogPostTitle">Title</label>
    <input class="form-control" id="blogPostTitle" type="text" name="blogPostTitle" value="">
    <label for="blogPostBody">Body</label>
    <textarea class="form-control" id="blogPostBody" name="blogPostBody" rows="5" cols="30"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="publish">Publish</button>
</form>
<%- include("partials/footer") -%>
